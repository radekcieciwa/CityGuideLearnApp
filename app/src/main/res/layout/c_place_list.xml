<?xml version="1.0" encoding="utf-8"?>
<com.bearddev.cityguide.cells.PlaceListCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            >

            <ImageView
                android:id="@+id/c_pl_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#B6B6B6"
                android:scaleType="centerCrop"
                />
                <!--android:src="@drawable/landscape_placeholder"-->

            <TextView
                android:id="@+id/c_pl_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="@dimen/semitransparent_text_on_image_margin_from_bottom"
                android:padding="@dimen/title_inside_text_padding"
                android:textColor="@color/title_text"
                android:textSize="@dimen/title_text_size"
                android:background="@color/semi_transparent_bkg_for_title_text"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            >
            <TextView
                android:id="@+id/c_pl_title_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|start"
                android:layout_marginRight="80dp"
                android:paddingLeft="@dimen/app_inside_text_preferable_padding"
                android:textColor="#434447"
                android:textSize="14sp"
                android:lines="1"
                />

            <TextView
                android:id="@+id/c_pl_description_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="top|start"
                android:paddingLeft="@dimen/app_inside_text_preferable_padding"
                android:textColor="#82898E"
                android:textSize="14sp"
                android:lines="1"
                />
        </LinearLayout>
    </LinearLayout>


</com.bearddev.cityguide.cells.PlaceListCell>